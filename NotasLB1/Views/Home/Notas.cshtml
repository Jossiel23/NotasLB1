            }
            else
            {
                <input type="number" asp-for="Pctres"placeholder="Escribe la nota del tercer Parcial"   class="form-control" />
            }


            <button class="btn btn-primary">Calcular Promedio</button>
        </div>


        <label>Notas</label>
        <label> @ViewBag.Nombre </label>
        <label> @ViewBag.Respuestanota </label>
        </form>
        </div>

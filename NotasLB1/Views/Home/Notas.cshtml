        <div class="card">
           
           <label>Nombre Completo</label>

                @if (ViewBag.DatoN1V == 0)
            {

                <input type="text" asp-for="Nombre" placeholder="Escribe el nombre completo" class="form-control" min="0" max="1000000000" />


            }
            else
            {
                <input type="text" asp-for="Nombre"placeholder="Escribe el nombre completo"   class="form-control" />
            }

             <label> Laboratorio 1</label>

            @if (ViewBag.DatoN1V == 0)

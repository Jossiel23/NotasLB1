                <input type="number" asp-for="Lbuno" placeholder="Escribe la nota del primer Laboratorio" class="form-control" min="0" max="1000000000" />


            }
            else
            {
                <input type="number" asp-for="  Lbuno"placeholder="Escribe la nota del primer Laboratorio"   class="form-control" />
            }

              <label>Parcial 1</label>

               @if (ViewBag.DatoN1V == 0)
            {

                <input type="number" asp-for="Pcuno" placeholder="Escribe la nota del primer Parcial" class="form-control" min="0" max="1000000000" />


            }
            else
            {
                <input type="number" asp-for="Pcuno"placeholder="Escribe la nota del primer Parcial"   class="form-control" />
            }

              <label> Laboratorio 2</label>

               @if (ViewBag.DatoN1V == 0)
            {

                <input type="number" asp-for="Lbdos" placeholder="Escribe la nota del segundo Laboratorio" class="form-control" min="0" max="1000000000" />


            }
            else
            {
                <input type="number" asp-for=" Lbdos"placeholder="Escribe la nota del segundo Laboratorio "   class="form-control" />
            }

              <label> Parcial 2</label>

               @if (ViewBag.DatoN1V == 0)
            {

                <input type="number" asp-for="Pcdos" placeholder="Escribe la nota del segundo Parcial" class="form-control" min="0" max="1000000000" />


            }
            else
            {
                <input type="number" asp-for="  Pcdos"placeholder="Escribe la nota del segundo Parcial"   class="form-control" />
            }

          
              <label> Laboratorio 3</label>

